@{
    ViewData["Title"] = "Предметы";
}

<h2>Предметы</h2>

@(Html.DevExtreme().DataGrid<Survey_app.Models.Subject>()
    .DataSource(ds => ds.Mvc()
        .Controller("SubjectsApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {
        columns.AddFor(m => m.Title);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
        .UseIcons(true)
    )
)
